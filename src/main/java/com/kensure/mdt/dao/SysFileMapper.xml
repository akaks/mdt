<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kensure.mdt.dao.SysFileMapper"><!--dsName="" saasAspect=""-->
	<!-- <cache readOnly="true"/> -->
    <sql id="allFields">
		id,
		content,
		create_userid as createUserid,
		create_dept as createDept,
		create_time as createTime,
		update_time as updateTime
    </sql>
    
	<sql id="insertFields">
		id,
		content,
		create_userid,
		create_dept,
		create_time,
		update_time
    </sql>
	
	<insert id="insert" parameterType="com.kensure.mdt.entity.SysFile">
		insert into sys_file (<include refid="insertFields"/>)
		values (
			#{id},
			#{content},
			#{createUserid},
			#{createDept},
			#{createTime},
			#{updateTime}
		)
	</insert>	
	
    <sql id="whereClause">
		<if test="content != null">			
			content = #{content}			
		</if>
		<if test="createUserid != null">			
			and create_userid = #{createUserid}			
		</if>
		<if test="createDept != null">			
			and create_dept = #{createDept}			
		</if>
		<if test="createTime != null">			
			and create_time = #{createTime}			
		</if>
		<if test="updateTime != null">			
			and update_time = #{updateTime}			
		</if>
	</sql>
    
	<select id="selectOne" resultType="com.kensure.mdt.entity.SysFile" parameterType="Long" >
		select <include refid="allFields"/> 
		  from sys_file 
		 where id = #{id} 
	</select>
	
	<select id="selectByIds" parameterType="List" resultType="com.kensure.mdt.entity.SysFile">
		select <include refid="allFields"/> from sys_file 
		where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>
	
	<select id="selectCountByWhere" parameterType="Map" resultType="Long">
		select count(*) from sys_file 
		<where>
		    <include refid="whereClause"/>
		</where>
	</select>

	<select id="selectByWhere" parameterType="Map" resultType="com.kensure.mdt.entity.SysFile">
		select <include refid="allFields"/>
		from sys_file 
		<where>
		    <include refid="whereClause"/>
		</where>				
		<if test="orderby != null">
			ORDER BY ${orderby}
		</if>
	</select>
	
	<sql id="setComn">		
		<if test="content != null">
			content = #{content},
		</if>
		<if test="createUserid != null">
			create_userid = #{createUserid},
		</if>
		<if test="createDept != null">
			create_dept = #{createDept},
		</if>
		<if test="createTime != null">
			create_time = #{createTime},
		</if>
		<if test="updateTime != null">
			update_time = #{updateTime}
		</if>
	</sql>
	
	<update id="update" parameterType="com.kensure.mdt.entity.SysFile">
		 update sys_file 
		    <set>
		    	<include refid="setComn"/>
			</set>
		  where id = #{id}
	</update>
	
	<update id="updateByMap" parameterType="Map">
		 update sys_file 
		    <set>
		    	<include refid="setComn"/>
			</set>
		  where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_file where id = #{id}
	</delete>
	
	<delete id="deleteMulti" parameterType="List">
		delete from sys_file
		where id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<delete id="deleteByWhere" parameterType="Map">
		delete from sys_file 
		<where>
		    <include refid="whereClause"/>
		</where>
	</delete>	

</mapper>    
